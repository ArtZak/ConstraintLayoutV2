        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_2_col_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row2\nCol1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/row_2_col_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/row_1"
        app:layout_constraintTop_toBottomOf="@id/row_1" />

    <TextView
        android:id="@+id/row_2_col_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row2\nCol2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/row_2_col_1"
        app:layout_constraintEnd_toEndOf="@id/row_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/row_2_col_1"
        app:layout_constraintTop_toBottomOf="@id/row_1" />

    <TextView
        android:id="@+id/row_3_col_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row3\nCol1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@id/row_3_col_2"
        app:layout_constraintStart_toStartOf="@id/row_1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/row_1"
        app:layout_constraintTop_toBottomOf="@id/row_2_col_1" />

    <TextView
        android:id="@+id/row_3_col_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row3\nCol2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/row_3_col_1"
        app:layout_constraintEnd_toStartOf="@id/row_3_col_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/row_3_col_1"
        app:layout_constraintStart_toEndOf="@id/row_3_col_1"
        app:layout_constraintTop_toBottomOf="@+id/row_2_col_1" />

