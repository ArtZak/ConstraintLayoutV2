        android:id="@+id/row_3_col_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row3\nCol3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/row_3_col_2"
        app:layout_constraintEnd_toEndOf="@id/row_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/row_3_col_2"
        app:layout_constraintStart_toEndOf="@id/row_3_col_2"
        app:layout_constraintTop_toBottomOf="@+id/row_2_col_1" />

    <TextView
        android:id="@+id/row_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        android:padding="20dp"
        android:text="Row4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/row_1"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="@id/row_1"
        app:layout_constraintStart_toStartOf="@+id/row_1"
        app:layout_constraintTop_toBottomOf="@id/row_3_col_1" />

</androidx.constraintlayout.widget.ConstraintLayout>

